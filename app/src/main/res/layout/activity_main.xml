<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khiva_city"
    tools:context=".MainActivity">


    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Welcome to Uzbekistan!"
            android:textColor="#0099ff"
            android:textSize="25sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/hotelButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/round_corner"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Hotel &amp; House"
            android:textColor="@color/purple_700" />

        <Button
            android:id="@+id/eatButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/round_corner"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Restaurant"
            android:textColor="@color/purple_700" />

        <Button
            android:id="@+id/infButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/round_corner"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Information"
            android:textColor="@color/purple_700" />


        <Button
            android:id="@+id/trsButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/round_corner"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Transports of Uzbekistan"
            android:textColor="@color/purple_700" />
    </LinearLayout>

</RelativeLayout>