<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backfergana">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Welcome to Fergana"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/white"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Pub#1"
            android:textSize="25sp"
            android:background="@color/white"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/pub"
        android:layout_width="wrap_content"
        android:layout_height="244dp"
        app:srcCompat="@drawable/pub1" />
        <TextView
            android:id="@+id/pub1"
            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/pub1"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Scandinavia"
            android:textSize="25sp"
            android:background="@color/black"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/skan"
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/scandi" />
        <TextView
            android:id="@+id/kandina"
            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/scandina"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Loft Restaurant"
            android:textSize="25sp"
            android:background="@color/black"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/loft" />
        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/loft"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Osh Markazi"
            android:textSize="25sp"
            android:background="@color/black"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/osh" />
        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/osh"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="chaykhana SHedevr"
            android:textSize="25sp"
            android:background="@color/black"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/chaykhana" />
        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/chaykhana"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/lybtNnFerganaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation"/>

    </LinearLayout>

</ScrollView>