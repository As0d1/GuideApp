<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TashkentRestaurantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tashkentback"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="Tashkent city"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="City Grill"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/city_grill" />

        <TextView
            android:layout_width="251dp"
            android:layout_height="117dp"
            android:background="@color/white"
            android:text="@string/tash"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/citygrillmenu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Check Menu" />

        <TextView
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Afsona"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/afsona" />

        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:background="@color/white"
            android:text="@string/afsona"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/restaurantAfsana"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Check Menu" />

        <TextView
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Gruzin Restaurant"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/gruzin" />

        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:background="@color/white"
            android:text="@string/Gruzin"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnMenuWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check menu" />

        <TextView
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Efendi Restaurant"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/maniefpic" />

        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:background="@color/white"
            android:text="@string/efendi"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/efendimenubtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check menu" />


    </LinearLayout>

</ScrollView>