<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TashkentRestaurantActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/tashkentback">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Tashkent city"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/white"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="City Grill"
            android:textSize="25sp"
            android:background="@color/black"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/city_grill" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/tash"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/citygrillmenu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Check Menu"
            android:background="@color/white"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Afsona"
            android:textSize="25sp"
            android:background="@color/white"
            android:textColor="@color/black"/>
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/afsona" />
        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/afsona"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/restaurantAfsana"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Check Menu"
            android:background="@color/white"
            />
        <TextView
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Gruzin Restaurant"
            android:textSize="25sp"
            android:background="@color/white"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            app:srcCompat="@drawable/gruzin"
            />
        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/Gruzin"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btnMenuWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check menu"/>
        <TextView
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Efendi Restaurant"
            android:textSize="25sp"
            android:background="@color/white"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/maniefpic" />
        <TextView

            android:layout_width="251dp"
            android:layout_height="117dp"
            android:text="@string/efendi"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/efendimenubtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check menu"/>




    </LinearLayout>

</ScrollView>